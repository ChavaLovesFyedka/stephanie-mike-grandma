<%
@data = letter.content.split(/(.+?}})/)

%>

<% @data.each do |line| %>
  <p>
    <% placeholder = line.match(/{{(.+?)}}/).to_s.gsub("{", "").gsub("}", "") %>
    <%= line.gsub(/({{.+?}})/, "<input type=\"text\" name=\"variables[]\" placeholder=\"#{placeholder}\">").html_safe %>
  </p>
<% end %>
