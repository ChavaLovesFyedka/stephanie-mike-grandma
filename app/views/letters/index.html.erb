<div class="jumbotron">
  
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
      <img src="<%= image_path("grandma.png") %>" height="60%" width="60%"> 
    </div>
    <div class="col-md-4">
      <h3>Write a letter to grandma!</h3>
      <br>
      <h4>Choose from the following templates to write a sweet, funny or outrageous letter to grandma or any other available person of interest.</h4>
      <div class="btn-group">
        <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
          Choose a letter! <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
            <!-- <li><a href="#">Dear Grandma</a></li>
            <li><a href="#">Dear Mr. President</a></li> -->
  
            <% @templates.each_with_index do |t, i| %>
            <li><a href="/letters/<%= t.id %>/drafts/new"><%= t.title %></a></li>
            <% end %>
        </ul>
        </div>
        <div class="btn">
          <form action="<%= new_letter_path %>">
            <input type="submit" value="Create your own!" class="btn btn-danger">
          </form>
        </div>
      </div> 
      <div class="col-md-2"></div>     
   </div>

</div>
<br>

