<div class="jumbotron">

<% @content = @letter.content %>
<% current_replacement = @content.scan(/({{.+?}})/) %>
  <% if @draft_variables %>
    <% @draft_variables.each_with_index do |draft, i| %>    
      <% @content.gsub!(current_replacement.flatten[i], draft.variable_value) %>
    <% end %>
  <% end %>

<%= @content.html_safe %>
<br>

<%= form_for [@letter, @draft] do |f| %>
<%= f.email_field :email %>
<%= f.submit %>
<% end %>


</div>


